{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": [".", "../shared"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es2018",
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
